      "source": [
        "def solution(a, b, n):\n",
        "    answer = 0\n",
        "    while n >= a:\n",
        "        temp = b*(n//a)\n",
        "        answer += temp\n",
        "        n = temp + n%a\n",
        "    return answer"
      ],
